{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,
    "module": "ESNext",
    "strict": true,
    "removeComments": true,
    "declaration": true,
    "outDir": "assets/js",
    "resolveJsonModule": true
  },
  "include": ["assets/ts/**/*"],
  "exclude": ["node_modules"]
}
